---
export type NavLink = {
	link: string;
	title: string;
}

export interface Props {
	activeLink: string;
}

const { activeLink } = Astro.props;
const navLinks: NavLink[] = [
	{
		link: '/',
		title: 'Home',
	},
	{
		link: '/news/',
		title: 'News',
	},
	{
		link: '/writing/',
		title: 'Writing',
	},
	{
		link: '/biography/',
		title: 'Bio',
	},
	{
		link: '/contact/',
		title: 'Contact',
	},
];
---
<nav>
	<ul>
		{
			navLinks.map( ( { link, title } ) => (
				<li>
					<a
						class:list={{
							active: link === activeLink,
						}}
						href={link}
					>
						{ title }
					</a>
				</li>
			) )
		}
	</ul>
</nav>

<style>
	nav {
		font-family: var(--headingFontFamily);
	}

	a {
		text-decoration: none;
	}

	nav ul {
		list-style: none;
		margin: 1em 0;
		padding: 0;
	}

	nav li {
		display: inline-block;
		font-size: 24px;
		letter-spacing: -0.5px;
		line-height: 24px;
		padding-right: 0.5em;
	}

	nav li a.active {
		font-weight: bold;
	}

	nav li a:hover:not(.active) {
		border-bottom: solid 1px var(--accentColor);
	}
</style>
